<Window x:Class="FormToResultsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormToResultsApp"
        mc:Ignorable="d"
        Title="FormToResults"
        Height="550" Width="480"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Border CornerRadius="10" 
                Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#FF7BF6B8" Offset="0"/>
                    <GradientStop Color="#FF9283F0" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Frame x:Name="frame" Source="Form.xaml" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>